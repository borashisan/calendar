<!-- Button trigger modal -->
<button type="button" class="btn btn-outline-dark btn-sm text-decoration-none" data-bs-toggle="modal" data-bs-target="#detail<%= training.id %>Modal">
  <% if training.training_type.blank? %>
    名称未登録
  <% else %>
    <%= training.training_type %>
  <% end %>
</button>

<!-- Modal -->
<div class="modal fade" id="detail<%= training.id %>Modal" tabindex="-1" aria-labelledby="detail<%= training.id %>ModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="detail<%= training.id %>ModalLabel">記録</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <%= form_with(model: training, local: true) do |form| %>
        <ul class="modal-body">
          <li class="training_type">
            <%= form.label :training_type, "筋トレ種目" %>
            <%= form.text_field :training_type %>
          </li>

          <li class="weight">
            <%= form.label :weight, "重量" %>
            <%= form.text_field :weight %>
          </li>

          <li class="rep">
            <%= form.label :rep, "1セット回数" %>
            <%= form.text_field :rep %>
          </li>

          <li class="set">
            <%= form.label :set, "セット数" %>
            <%= form.text_field :set %>
          </li>

          <li class="time">
            <%= form.label :start_time, "日時" %>
            <%= form.datetime_select :start_time %>
          </li>

          <li class="comment">
            <%= form.label :comment, "コメント" %>
            <%= form.text_field :comment %>
          </li>
        </ul>
        <div class="modal-footer">
          <div class="submit">
            <%= link_to '削除',training_path(training.id), method: :delete, data: { confirm: '削除してよろしいですか?' }, class: 'btn btn-dark' %>
            <%= form.submit "変更する", class: "btn btn-warning" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>